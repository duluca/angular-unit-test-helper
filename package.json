{
  "name": "angular-unit-test-helper",
  "version": "16.5.0",
  "description": "Helper functions to help write unit tests in Angular using mocks and spies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run build:test && node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.app.json",
    "pretest": "npm run build && npm run build:test",
    "prepublish": "npm test",
    "postpublish": "git push origin --all && git push origin --tags",
    "style": "prettier --check \"{src,tests}/**/*.ts\"",
    "style:fix": "npm run style -- --write",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "prestart": "npm run build",
    "build:test": "tsc -p tsconfig.test.json",
    "prepublishOnly": "npm run test",
    "prepare": "npm run build",
    "test:ci": "npm test",
    "init:env": "init-dev-env generate-dot-env example.env -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duluca/angular-unit-test-helper.git"
  },
  "keywords": [
    "angular",
    "unit",
    "test",
    "jest",
    "mock",
    "spy"
  ],
  "author": "Doguhan Uluca",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/duluca/angular-unit-test-helper/issues"
  },
  "homepage": "https://github.com/duluca/angular-unit-test-helper#readme",
  "devDependencies": {
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@jest/globals": "^29.6.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "dev-norms": "^2.0.4",
    "eslint": "^8.46.0",
    "eslint-plugin-jest": "^27.2.3",
    "init-dev-env": "^2.0.0",
    "jest": "^29.6.2",
    "jest-createspyobj": "^2.0.0",
    "jest-environment-jsdom": "^29.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsutils": "^3.21.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@angular/compiler": "^16",
    "@angular/core": "^16",
    "jest": ">= 29"
  }
}
