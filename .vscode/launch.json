{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest Current Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["tests/${fileBasenameNoExtension}.js"],
      "env": {
        "NODE_PATH": "."
      },
      "preLaunchTask": "npm: build:test"
    }
  ]
}
